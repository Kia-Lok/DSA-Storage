class Solution {
    int count = 0;
    public int findCircleNum(int[][] isConnected) {
        for (int i = 0; i < isConnected.length; i++) {
            for (int j = 0; j < isConnected[i].length; j++) {
                if (isConnected[i][j] == 1) {
                    count++;
                    provinceTraversal(isConnected, i);
                }
            }
        }
        return count;
    }

    private void provinceTraversal(int[][] isConnected, int i) {
        for (int j = 0; j < isConnected[i].length; j++) {
            if (isConnected[i][j] == 1) {
                isConnected[i][j] = 0;
                isConnected[j][i] = 0;
                provinceTraversal(isConnected, j);
            }
        }
    }
}
