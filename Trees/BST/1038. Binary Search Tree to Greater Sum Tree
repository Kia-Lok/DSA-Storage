/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    ArrayList<Integer> sortedArr = new ArrayList<>();

    public TreeNode bstToGst(TreeNode root) {
        traversal(root);
        return updateTraversal(root);
    }

    public void traversal(TreeNode root) {
        if (root.left != null) {
            traversal(root.left);
        }
        sortedArr.add(root.val);
        if (root.right != null) {
            traversal(root.right);
        }
    }

    public TreeNode updateTraversal(TreeNode root) {
        int newVal = 0;
        boolean found = false;
        for (int i = 0; i < sortedArr.size(); i++) {
            if (root.val == sortedArr.get(i)) {
                found = true;
            }
            if (found) {
                newVal += sortedArr.get(i);
            }
        }
        root.val = newVal;
        if (root.left != null) {
            root.left = updateTraversal(root.left);
        }
        if (root.right != null) {
            root.right = updateTraversal(root.right);
        }
        return root;
    }
}
