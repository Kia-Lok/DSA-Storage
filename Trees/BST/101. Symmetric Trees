/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean isSymmetric(TreeNode root) {
        TreeNode invertedRoot = invert(root);
        return comparison(root, invertedRoot);
    }

    public TreeNode invert(TreeNode root) {
        if (root == null) {
            return null;
        } else {
            TreeNode left = invert(root.left);
            TreeNode right = invert(root.right);
            TreeNode inverted = new TreeNode(root.val, right, left);
            return inverted;
        }
    }

    public boolean comparison(TreeNode p, TreeNode q) {
        if (p == null && q == null) {
            return true;
        } else if (p == null || q == null) {
            return false;
        } else {
            if (p.val != q.val) {
                return false;
            }
            boolean left = comparison(p.left, q.left);
            boolean right = comparison(p.right, q.right);
            return left && right;
        }
    }
}
