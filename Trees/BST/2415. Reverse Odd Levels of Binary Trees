/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    Map<Integer, ArrayList<Integer>> map = new HashMap<>();
    ArrayList<Integer> bfs = new ArrayList<>();

    public TreeNode reverseOddLevels(TreeNode root) {
        traversalLevel(root, 0);
        for (int key : map.keySet()) {
            if (key % 2 == 1) {
                Collections.reverse(map.get(key));
            }
        }
        for (int key : map.keySet()) {
            ArrayList<Integer> levelList = map.get(key);
            for (int i = 0; i < levelList.size(); i++) {
                bfs.add(levelList.get(i));
            }
        }
        return construct(1);

    }

    public void traversalLevel(TreeNode root, int level) {
        map.computeIfAbsent(level, k -> new ArrayList<>()).add(root.val);
        if (root.left != null) {
            traversalLevel(root.left, level + 1);
        }
        if (root.right != null) {
            traversalLevel(root.right, level + 1);
        }
    }

    public TreeNode construct(int index) {
        if (index >= bfs.size() + 1) {
            return null;
        } else {
            TreeNode root = new TreeNode(bfs.get(index - 1));
            root.left = construct(index * 2);
            root.right = construct(index * 2 + 1);
            return root;
        }
    }
}
