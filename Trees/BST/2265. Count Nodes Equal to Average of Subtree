/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int count = 0;

    public int averageOfSubtree(TreeNode root) {
        traversal(root);
        return this.count;
    }

    public void check(TreeNode root) {
        List<Integer> subtreeList = subtreeSum(root);
        int avg = (int) subtreeList.get(0) / subtreeList.get(1);
        if (avg == root.val) {
            this.count += 1;
        }
    }

    public List<Integer> subtreeSum(TreeNode root) {
        int total = root.val;
        int count = 1;
        if (root.left != null) {
            List<Integer> leftList = subtreeSum(root.left);
            total += leftList.get(0);
            count += leftList.get(1);
        }
        if (root.right != null) {
            List<Integer> rightList = subtreeSum(root.right);
            total += rightList.get(0);
            count += rightList.get(1);
        }
        return List.of(total, count);
    }

    public void traversal(TreeNode root) {
        check(root);
        if (root.left != null) {
            traversal(root.left);
        }
        if (root.right != null) {
            traversal(root.right);
        }
    }
}
