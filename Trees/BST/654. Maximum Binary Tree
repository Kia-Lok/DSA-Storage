/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode constructMaximumBinaryTree(int[] nums) {
        if (nums.length == 1) {
            return new TreeNode(nums[0]);
        } else if (nums.length == 0) {
            return null;
        } else {
            int maxVal = -1;
            int index = -1;
            for (int i = 0; i < nums.length; i++) {
                if (nums[i] > maxVal) {
                    maxVal = nums[i];
                    index = i;
                }
            }
            TreeNode returnNode = new TreeNode(maxVal);
            returnNode.left = constructMaximumBinaryTree(Arrays.copyOfRange(nums, 0, index));
            if (index < nums.length - 1) {
                returnNode.right = constructMaximumBinaryTree(Arrays.copyOfRange(nums, index + 1, nums.length));
            } else {
                returnNode.right = null;
            }
            return returnNode;
        }
    }
}
