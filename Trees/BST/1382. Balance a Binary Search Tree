/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    ArrayList<Integer> order = new ArrayList<>();

    public TreeNode balanceBST(TreeNode root) {
        traversal(root);
        int[] arr = new int[order.size()];
        for (int i = 0; i < order.size(); i++) {
            arr[i] = order.get(i);
        }
        TreeNode returnNode = sortedArrayToBST(arr);
        return returnNode;
    }

    public void traversal(TreeNode root) {
        if (root.left != null) {
            traversal(root.left);
        }
        order.add(root.val);
        if (root.right != null) {
            traversal(root.right);
        }
    }

    public TreeNode sortedArrayToBST(int[] nums) {
        if (nums.length == 1) {
            TreeNode returnNode = new TreeNode(nums[0], null, null);
            return returnNode;
        } else if (nums.length == 2) {
            TreeNode returnNode = new TreeNode(nums[1], new TreeNode(nums[0], null, null), null);
            return returnNode;
        } else {
            int middle = (int) Math.ceil(nums.length / 2);
            int[] left = Arrays.copyOfRange(nums, 0, middle);
            int[] right = Arrays.copyOfRange(nums, middle + 1, nums.length);
            TreeNode returnNode = new TreeNode(nums[middle], sortedArrayToBST(left), sortedArrayToBST(right));
            return returnNode;
        }
    }
}
