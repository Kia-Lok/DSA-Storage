class Solution {
    public int minPathSum(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        int[][] memo = new int[m][n];
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                memo[i][j] = -1;
            }
        }
        memo[m - 1][n - 1] = grid[m - 1][n - 1];
        return traversal(m, n, 0, 0, grid, memo);
    }

    public int traversal(int m, int n, int i, int j, int[][] grid, int[][] memo) {
        if (memo[i][j] != -1) {
            return memo[i][j];
        } 
        int curr = grid[i][j];
        if (i < m - 1 && j < n - 1) {
            int down = traversal(m, n, i + 1, j, grid, memo);
            int right = traversal(m , n, i, j + 1, grid, memo);
            curr += down > right ? right : down;
            memo[i][j] = curr;
            return curr;
        } else if (i < m - 1) {
            int down = traversal(m, n, i + 1, j, grid, memo);
            curr += down;
            memo[i][j] = curr;
            return curr;
        } else {
            int right = traversal(m , n, i, j + 1, grid, memo);
            curr += right;
            memo[i][j] = curr;
            return curr;
        }
    }
}
