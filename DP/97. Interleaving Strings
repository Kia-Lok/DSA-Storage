enum TriState {
    TRUE,
    FALSE,
    UNKNOWN
}

class Solution {

    public boolean isInterleave(String s1, String s2, String s3) {
        int m = s1.length();
        int n = s2.length();

        if (s3.length() != m + n) {
            return false;
        }

        TriState[][] memo = new TriState[m + 1][n + 1];
        for (int i = 0; i <= m; i++) {
            for (int j = 0; j <= n; j++) {
                memo[i][j] = TriState.UNKNOWN;
            }
        }

        return Traversal(s1, s2, s3, 0, 0, 0, memo) == TriState.TRUE;
    }

    public TriState Traversal(String s1, String s2, String s3,
                              int p1, int p2, int p3,
                              TriState[][] memo) {

        if (memo[p1][p2] != TriState.UNKNOWN) {
            return memo[p1][p2];
        }

        if (p3 == s3.length()) {
            return memo[p1][p2] = TriState.TRUE;
        }

        boolean canUseS1 = p1 < s1.length() && s1.charAt(p1) == s3.charAt(p3);
        boolean canUseS2 = p2 < s2.length() && s2.charAt(p2) == s3.charAt(p3);

        TriState result = TriState.FALSE;

        if (canUseS1) {
            result = Traversal(s1, s2, s3, p1 + 1, p2, p3 + 1, memo);
        }

        if (result != TriState.TRUE && canUseS2) {
            result = Traversal(s1, s2, s3, p1, p2 + 1, p3 + 1, memo);
        }

        memo[p1][p2] = result;
        return result;
    }
}
