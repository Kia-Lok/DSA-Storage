class Solution {
    public int jump(int[] nums) {
        int[] memo = new int[nums.length];
        memo[nums.length - 1] = 0;
        for (int i = 0; i < nums.length - 1; i++) {
            memo[i] = -2;
        }
        return jumpIter(nums, 0, memo);
    }

    public int jumpIter(int[] nums, int index, int[] memo) {
        if (index >= nums.length) {
            return -1;
        }
        if (memo[index] == 0) {
            return 0;
        } else if (memo[index] == -1) {
            return -1;
        } else {
            int min = 1001;
            for (int i = 1; i <= memo[index]; i++) {
                int result = jumpIter(nums, index + i, memo);
                if (result != -1 && result < min) {
                    min = result;
                }
            }
            if (min == 1001) {
                memo[index] = -1;
                return -1;
            } else {
                memo[index] = 1 + min;
                return 1 + min;
            }
        }
    }
}
